name: First Workflow
on: workflow_dispatch
jobs:
  first-job:
    runs-on: macos-15
    steps:
      - name: Print Greeting
        run: echo "Hello World!"
      - name: Print Aishtemasu
        run: echo "Sayonara"




name: Deploy Project
on: [push, workflow_dispatch]
jobs:
  test:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout Code
        uses: actions/checkout@v3  #uses if we have to use actions 
      - name: Install Nodejs
        uses: actions/setup-node@v3
        with:
          node-version: 18
      - name: Install Dependencies
        run: npm ci
      - name: Run test
        run: npm test
  deploy:
    needs: test     #runs sequential
    runs-on: ubuntu-latest
    steps:
      - name: Checkout Code
        uses: actions/checkout@v3
      - name: Install Nodejs
        uses: actions/setup-node@v3
        with:
          node-version: 18
      - name: Install Dependencies
        run: npm ci
      - name: build project
        run: npm run build
      - name: Deploy
        run: echo "Deploying..."